<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/newEntryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:onClick="onNewEntryButtonClicked"
        android:text="@string/button_newEntry"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@+id/takePhotoButton"/>

    <Button
        android:id="@+id/takePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:onClick="onTakePhotoClicked"
        android:text="@string/button_takePhoto"
		android:layout_alignParentTop="true"
		android:layout_toLeftOf="@+id/newMoodButton"/>

    <Button
        android:id="@+id/newMoodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:onClick="moods"
        android:text="@string/button_newMood"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"/>

    <ExpandableListView
        android1:id="@+id/entries"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/newEntryButton" >
    </ExpandableListView>

</RelativeLayout>